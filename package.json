{
  "name": "ultimate-god-tier-economy-server",
  "version": "1.0.0",
  "description": "Zero-Cost Stateless Economy Server with Time Tracking & Crystal Economy",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest --testTimeout=10000 --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint server.js --fix",
    "format": "prettier --write server.js",
    "security-check": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t economy-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env economy-server",
    "docker:dev": "docker-compose up --build",
    "benchmark": "autocannon -c 100 -d 30 http://localhost:3000/health",
    "profile": "node --prof server.js",
    "profile:process": "node --prof-process isolate*.log",
    "health-check": "curl http://localhost:3000/health | jq .",
    "deploy:render": "render deploy",
    "deploy:railway": "railway up",
    "deploy:fly": "fly deploy"
  },
  "keywords": [
    "economy",
    "stateless",
    "server",
    "time-tracking",
    "crystals",
    "anti-cheat",
    "jwt",
    "hmac",
    "scalable",
    "zero-cost",
    "game-server"
  ],
  "author": "Your Name/Team <email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ultimate-economy-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ultimate-economy-server/issues"
  },
  "homepage": "https://github.com/yourusername/ultimate-economy-server#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "crypto": "^1.0.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.0",
    "autocannon": "^7.12.0",
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/supertest": "^2.0.16"
  },
  "files": [
    "server.js",
    "package.json",
    "README.md",
    "Dockerfile",
    ".env.example",
    "LICENSE"
  ],
  "volta": {
    "node": "18.18.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "private": true,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
